# LLM Configuration
# Choose your LLM provider: "ollama" or "openai"
LLM_PROVIDER=ollama

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI Configuration (for cloud models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# PostgreSQL Database Configuration
DB_NAME=recruitment_db
DB_USER=recruitment_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Docker Deployment (when using docker-compose)
# Uncomment and set these for Docker deployment:
# OLLAMA_BASE_URL=http://host.docker.internal:11434
# DB_HOST=postgres
# DB_PASSWORD=recruitment_pass_123
