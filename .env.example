# LLM Configuration
# Choose your LLM provider: "ollama" or "openai"
LLM_PROVIDER=ollama

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Embedding Configuration (for vector search)
# Choose embedding provider: "sentence-transformers" (local, free) or "openai" (cloud, paid)
EMBEDDING_PROVIDER=sentence-transformers
# For sentence-transformers: all-MiniLM-L6-v2 (384 dims), all-mpnet-base-v2 (768 dims)
# For OpenAI: text-embedding-3-small (1536 dims), text-embedding-ada-002 (1536 dims)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Celery Configuration
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@recruitment.com

# PostgreSQL Database Configuration
DB_NAME=recruitment_db
DB_USER=recruitment_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Docker Deployment (when using docker-compose)
# Uncomment and set these for Docker deployment:
# OLLAMA_BASE_URL=http://host.docker.internal:11434
# DB_HOST=postgres
# DB_PASSWORD=recruitment_pass_123

